{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@common/*": ["common/*"],
            "@usecases/*": ["usecases/*"],
            "@data-providers/*": ["data-providers/*"],
            "@services/*": ["services/*"]
        },
        "lib": ["es2017", "dom"],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noLib": false,
        "rootDirs": [
            "src"
        ],
        "allowJs": true,
        "resolveJsonModule": true,
        "outDir": "build/",
        "removeComments": true,
        "sourceMap": true,
        "target": "esnext"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "./build/**/*"
    ]
}
